{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },

  "files": {

    "includes": [
      "**",
      "!node_modules/**",
      "!src/routeTree.gen.ts",
      "!playwright.config.ts",
      "!playwright-report/**"
    ]
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },

  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  }


}
